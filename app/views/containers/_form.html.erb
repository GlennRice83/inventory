<% if container_form.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(container_form.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>

    <ul>
    <% container_form.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<fieldset>
  <%= form.label :name %>
  <%= form.text_field :name %>
</fieldset>

<fieldset>
  <%= form.label :parent_id %>
  <%= form.select :parent_id, options_for_select(Container.all.map { |c| [c.name, c.id] }) %>
</fieldset>
